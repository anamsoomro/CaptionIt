  </a>
  <label> <%= comic.funniest_caption.text unless comic.captions.empty? %></label> <br><br>
  
<% end %>

<h2>3 Latest Images</h2>
<% Comic.newest_3.each do |comic| %>
  <a href="/comics/<%= comic.id %>">
      <img src="<%= comic.image_url %>" alt="Image did not load" height="100"><br>
  </a>
  <label> <%= comic.funniest_caption.text unless comic.captions.empty? %></label> <br><br>
<% end %>

<h2>3 Funniest Users</h2>
<% User.top_3.each do |user| %>
  <a href="/users<%= user.id %>">
    <%= user.username %> 
  </a>
  [<%= user.likes %> knee slaps] <br>
<% end %>


</div>

