<h1>CAPTION IT!</h1>


<% if logged_in? %>
    <%else%>
<%= button_to "Login", '/login', method: :get %>
<%= button_to "Sign Up", '/users/new', method: :get %>
<%end%>


<h2>3 Funniest Images</h2>

<% Comic.top_3.each do |comic| %>
