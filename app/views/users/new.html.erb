<div>

<h1>Sign Up:</h1>

<% if  flash[:errors] %>
  <%flash[:errors].each do |error|%>
    <p style="color:red"><b><%= error %></b><p>
  <%end%>
<%end%>


<%= form_for @user do |f|%>
  <%= f.label :username%>
  <%= f.text_field :username%>
  <%= f.label :password%>
  <%= f.password_field :password%>
  <%= f.submit %>
<%end%>

</div>